<!DOCTYPE html>
<html lang="ko">
    <head>
        <meta charset="UFT-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    </head>
    <body>
        <div>
            <h2>Memo <button id="createBtn" type="button" class="btn btn-secondary">글쓰기</button></h2>
        </div>
        
        <% if(rows != undefined) { %>
        <div style="padding:3%;">
            <div class="row row-cols-1 row-cols-md-4 g-4">
                <% for(let row of rows){ %>
                <div class="col">
                    <div class="card" name="memo" value=<%=row.seq %>>
                        <div class="card-body">
                            <h5 class="card-title"><%=row.title %></h5>
                            <p class="card-text"><%=row.body %></p>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>   
          </div>
          <% } %>
    </body>
</html>
<script>
    function getMemo() {
        $("[name=memo]").on('click', function() {
            var id = $(this).attr('value');
            window.open('/memo/' + id, '', 'width=420, height=550, top=150, left=300');
        });
    }

    function createMemo() {
        var createBtn = document.getElementById('createBtn');

        createBtn.addEventListener('click', function() {
            window.open('/memo/create', '', 'width=420, height=550, top=150, left=300');
        });
    }
    
    function addEvent() {
        getMemo();
        createMemo();
    }

    addEvent();
</script>