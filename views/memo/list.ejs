<!DOCTYPE html>
<html lang="ko">
    <head>
        <meta charset="UFT-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    </head>
    <body>
        <div class="d-flex">
            <%- include('../common/sidebar', {'click': 'memo'}) %>
            <div class="p-2 flex-fill">
                <%- include('../common/topbar') %>
                
                <% if(rows != undefined) { %>
                <div style="padding:3%;">
                    <div class="row row-cols-1 row-cols-md-4 g-4">
                        <table class="table">
                            <thead>
                                <th scope="col">번호</th>
                                <th scope="col">제목</th>
                                <th scope="col">작성자</th>
                                <th scope="col">등록일</th>
                            </thead>
                            <tbody>
                            <% for(let row of rows){ %>
                                <tr>
                                    <th scope="row"><%= row.seq %></th>
                                    <td name="memo" value="<%= row.seq %>"><%= row.title%></td>
                                    <td><%= row.register %></td>
                                    <td><%= row.registdate %></td>
                                </tr>
                            <% } %>
                            </tbody>
                        </table>
                    </div>   
                  </div>
                  <% } %>
            </div>
        </div>
    </body>
</html>
<script>
    function getMemo() {
        $("[name=memo]").on('click', function() {
            var id = $(this).attr('value');
            //window.open('/memo/' + id, '', 'width=420, height=550, top=150, left=300');
            window.location.href = '/memo/' + id;
        });
    }

    function createMemo() {
        var createBtn = document.getElementById('createBtn');

        createBtn.addEventListener('click', function() {
            //window.open('/memo/create', '', 'width=420, height=550, top=150, left=300');
            window.location.href = '/memo/create'
        });
    }
    
    function addEvent() {
        getMemo();
        createMemo();
    }

    addEvent();
</script>