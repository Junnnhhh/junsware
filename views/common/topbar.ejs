            <input type="hidden" name="page" value="update"/>
            <button value=<%=seq %> type="submit" class="btn btn-primary">수정</button>
            <button id="delete" value=<%=seq %> type="button" class="btn btn-primary">삭제</button>
        </form>
        <% } %>
        <% if(page == 'update') { %>
            <button id="update" value="<%= seq %>" type="button" class="btn btn-primary">수정</button>
